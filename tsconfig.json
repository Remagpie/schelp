{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "lib": ["ES2015"],
        "declaration": true,
        "outDir": "lib",

        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": ["./src/**/*", "./tests/**/*"]
}
